--width 4056            # 画像の幅を設定
--height 3040           # 画像の高さを設定
--rotation 180          # 画像の回転角度を設定（180度回転）
--sharpness 0           # シャープネスを設定（0は標準）
--brightness 0.5        # 明るさを設定（0.5は中間の明るさ）
--contrast 1.0          # コントラストを設定（1.0は標準）
--gain 1.0              # ゲインを設定（1.0は標準）
--saturation 1.0        # 彩度を設定（1.0は標準）
--ev -2                 # 露出補正を設定（-2は暗め）
--timeout 1000          # 撮影タイムアウトをミリ秒単位で設定
--hdr auto              # HDR（ハイダイナミックレンジ）を自動的に有効にする
--metadata "撮影日時: $(date)"  # 撮影日時のメタデータを追加
--nopreview true        # プレビューを無視する設定
